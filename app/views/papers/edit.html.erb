<h1>Editing paper</h1>

<%= form_with(model:@paper, local:true) do |form| %>
  <%= form.select 'author_ids',
                  options_from_collection_for_select(Author.all, :id, :name, @paper.author_ids),
                  {},
                  multiple: true, size: 10 %>
  <%= form.submit %>
  <%if @paper.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@error.errors.count, "error") %> prohibited this author from being saved:
      </h2>
      <ul>
        <% @error.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%end %>
<br>

<div>
  <%= link_to "Show this paper", @paper %> |
  <%= link_to "Back to papers", papers_path %>
</div>
